    // â”€â”€â”€ JAMAIS rÃ©intercepter supernanny â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    if basename == "supernanny" {
        return;
    }

    // â”€â”€â”€ CAS SPECIAL bash : enforcement de policy interactive â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
if basename == "bash" {
    info!("ğŸ” Intercepted bash â†’ policy enforced");
